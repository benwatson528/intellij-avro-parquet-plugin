    <version>1.0.0</version>
    <vendor email="ben@bwinsights.co.uk" url="http://www.hadoopathome.co.uk">Ben Watson</vendor>

    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
